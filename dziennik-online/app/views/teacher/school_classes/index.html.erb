<% unless @school_classes.nil? %>
  <% @school_classes.each do |school_class| %>
    <%= school_class.fullname %>
  <% end %>
<% end %>

<h2>Dodaj nową klasę</h2>
<%= form_for @school_class, :url => teacher_school_classes_path do |f| %>
  <div><%= f.label :year, 'Klasa' %><br />
  <%= f.number_field :year %></div>

  <div><%= f.label :name, 'Nazwa' %><br />
  <%= f.text_field :name %></div>

  <div><%= f.label :profile, 'Profil' %><br />
  <%= f.text_field :profile %></div>

  <div><%= f.label :yearbook, 'Rocznik' %><br />
  <%= f.number_field :yearbook, :value => '2011' %></div>

  <div><%= f.submit "Stwórz" %></div>
<% end %>
