<%= page_header "Ustawienia szkoły" %>

<% unless @semesters.empty? %>
  <table class="table table-striped table-bordered">

    <tr>
      <th>#</th>
      <th>Semestr</th>
      <th>Rok</th>
      <th style="width:200px;"></th>
    </tr>

    <% @semesters.each_with_index do |semester, i| %>
      <tr>
        <td><%= i+1 %></td>
        <td><%= semester.semester %></td>
        <td><%= "#{semester.start_year}/#{semester.end_year}" %></td>
        <td>
          <% if semester.active %>
            Semestr jest aktywny
          <% else %>
            <%= link_to "Ustaw jako aktywny", set_semester_as_active_path(semester) %>
          <% end %>
        </td>
      </tr>
    <% end %>

  </table>
<% else %>
  <%= alert_box "Szkoła nie ma ustawionego semestru!", "Możesz dodać semestr poprzez poniższy formularz." %>
<% end %>

<%= page_header "Dodaj nowy semestr" %>

<%= render 'admin/semesters/form', :semester => @semester %>
