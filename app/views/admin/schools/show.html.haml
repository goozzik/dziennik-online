= page_header "Ustawienia szkoły"
- unless @semesters.empty?
  %table.table.table-striped.table-bordered
    %thead
      %tr
        %th{:style => "width:20px"} #
        %th Semestr
        %th Rok
        %th{:style => "width:112px"}
    - @semesters.each_with_index do |semester, i|
      %tr
        %td= i+1
        %td= semester.semester
        %td= "#{semester.start_year}/#{semester.end_year}"
        %td
          = link_to "Ustaw jako aktywny", set_semester_as_active_path(semester), class: "btn btn-mini #{"disabled" unless can? :activate, semester}", confirm: "Czy jesteś pewien, że chcesz aktywować semestr: #{semester.fullname}?"
- else
  = alert_box "Szkoła nie ma ustawionego semestru!", "Możesz dodać semestr poprzez poniższy formularz."
= page_header "Dodaj nowy semestr"
= render 'admin/semesters/form', :semester => @semester
