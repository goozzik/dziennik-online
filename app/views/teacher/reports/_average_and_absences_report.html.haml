%table.table.table-bordered.table-condensed
  %tr
    %th{style:"width:3%"} #
    %th{style:"width:11%"} Imię
    %th{style:"width:11%"} Nazwisko
    %th Średnia
    %th Frekwencja
  - school_class.students_by_average(semester).each_with_index do |student, i|
    - semester_absences = student.semester_absences(semester)
    %tr
      %td= i+1
      %td= student.first_name
      %td= student.last_name
      %td= student.average_semestral_mark_for_semester(semester)
      %td= semester_absences.percentage
