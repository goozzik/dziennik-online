= page_header "Uczniowie do egzaminów poprawkowych"

- @subject_templates.each do |subject_template|
  %h2= subject_template.name
  - students = @school.resit_students_by_subject_template(subject_template)
  - unless students.empty?
    .row
      .span6
        %table.table.table-bordered.table-condensed
          %tr
            %th{style:"width:3%"} #
            %th Imię
            %th Nazwisko
            %th Klasa
            - students.each_with_index do |student, i|
              %tr
                %td= i+1
                %td= student.first_name
                %td= student.last_name
                %td= student.school_class.name
  - else
    = info_box "Brak uczniów do egzaminów poprawkowych.", ""
