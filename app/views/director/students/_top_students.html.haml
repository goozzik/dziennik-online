- unless students.empty?
  %table.table.table-bordered
    %tr
      %th{style:"width:3%"} #
      %th Imię
      %th Nazwiso
      %th Klasa
      %th Średnia
    - students.each_with_index do |student, i|
      %tr
        %td= i+1
        %td= student.first_name
        %td= student.last_name
        %td= student.school_class.fullname
        %td= student.current_average.average
- else
  = info_box "Brak ocen do wyliczenia średniej.", "Żaden z wychowawców klas nie dodał jeszczcze ocen semestralnych."
