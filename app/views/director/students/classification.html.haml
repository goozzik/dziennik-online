= page_header "Uczniowie do egzaminów klasyfikacyjnych"

- @subject_templates.each do |subject_template|
  %h2= subject_template.name
  - unless current_director.school_classification_students_by_subject_template(subject_template).empty?
    .row
      .span6
        %table.table.table-bordered.table-condensed
          %tr
            %th{style:"width:3%"} #
            %th Imię
            %th Nazwisko
            %th Klasa
            - current_director.school_classification_students_by_subject_template(subject_template).each_with_index do |student, i|
              %tr
                %td= i+1
                %td= student.first_name
                %td= student.last_name
                %td= student.school_class.name
  - else
    = info_box "Brak uczniów do egzaminów klasyfikacyjnych.", ""
