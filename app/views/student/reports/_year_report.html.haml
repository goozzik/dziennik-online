%h2= "Podsumowanie roku szkolnego #{current_student.school_year}"
%table.table.table-bordered
  %tr
    %th{rowspan:"2"}
    %th{colspan:"5"} Frekwencja
    %th{colspan:"8"} Oceny
  %tr
    %th{style:"width:7%"} %
    %th{style:"width:7%"} ob
    %th{style:"width:7%"} us
    %th{style:"width:7%"} nu
    %th{style:"width:7%"} sp
    %th{style:"width:5%"} Åšrednia
    %th{style:"width:5%"} 1
    %th{style:"width:5%"} 2
    %th{style:"width:5%"} 3
    %th{style:"width:5%"} 4
    %th{style:"width:5%"} 5
    %th{style:"width:5%"} 6
    %th nkl
  - year_absences = current_student.year_absences(current_student.school_year)
  %tr
    %td= "#{current_student.first_name} #{current_student.last_name}"
    %td= year_absences.percentage
    %td= year_absences.required
    %td= year_absences.justified
    %td= year_absences.unexcused
    %td= year_absences.late
    %td= current_student.average_semestral_mark_for_year(current_student.school_year)
    - 1.upto(6).each do |i|
      %td= current_student.count_year_marks(i, current_student.school_year)
    %td= current_student.count_year_marks("nkl", current_student.school_year)
  - year_absences = current_student.school_class_year_absences(current_student.school_year)
  %tr
    %td Klasa 
    %td= year_absences.percentage
    %td= year_absences.required
    %td= year_absences.justified
    %td= year_absences.unexcused
    %td= year_absences.late
    %td= current_student.school_class_average_semestral_mark_for_year(current_student.school_year)
    - 1.upto(6).each do |i|
      %td= current_student.school_class_count_year_marks(i, current_student.school_year)
    %td= current_student.school_class_count_year_marks("nkl", current_student.school_year)
