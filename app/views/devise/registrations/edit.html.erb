<div class="page-header">
  <h1>Ustawienia konta</h1>
</div>

<div class="row">
  <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, :class => "well form-horizontal span4"}) do |f| %>
    <%= devise_error_messages! %>

    <%= f.input :email, :label => "Email" %>
    <%= f.input :password, :label => "Hasło", :hint => "pozostaw puste jeśli nie chcesz go zmieniać" %>
    <%= f.input :password_confirmation, :label => "Powtórz hasło" %>
    <%= f.input :current_password, :label => "Aktualne hasło", :hint => "potrzebujmy twojego aktualnego hasła, aby potwierdzić twoje zmiany" %>

    <div class="form-actions">
      <%= f.button :submit, "Zapisz", :class => "btn btn-primary" %>
    </div>
  <% end %>
</div>
